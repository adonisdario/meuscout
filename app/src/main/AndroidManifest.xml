<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tcc.meuscout">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:protectionLevel="signature"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MeuScout">
        <activity android:name=".activities.EnderecoListActivity"
            android:label="Endereços salvos"
            />
        <activity
            android:name=".activities.EnderecoActivity"
            android:label="Endereço" />
        <activity
            android:name=".activities.TimeActivity"
            android:label="Infos do Time" />
        <activity
            android:name=".activities.TimeListActivity"
            android:label="Times" />
        <activity
            android:name=".activities.PartidaTabActivity"
            android:label="@string/txt_partida_titulo" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppThemeDrawerMenu.NoActionBar" />
        <activity
            android:name=".activities.CadastroActivity"
            android:label="@string/txt_cadastro_titulo" />
        <activity
            android:name=".activities.MenuDrawerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_menu_drawer"
            android:theme="@style/AppThemeDrawerMenu.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/AppThemeDrawerMenu.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>