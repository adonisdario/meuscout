<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/insp_veicular_tablayout"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/Cor_Primaria"
            app:tabIndicatorHeight="2dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/Cor_Primaria"
            app:tabTextColor="@color/Cor_Texto_Nao_Selecionado"></com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/Cor_Primaria_Transp">

        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>



</FrameLayout>